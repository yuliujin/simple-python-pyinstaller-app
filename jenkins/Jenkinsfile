pipeline {
    agent none
    stages {
        stage('Check version') {
            agent {
              dockerfile {
                filename 'Dockerfile'
                dir 'jenkins'
              }
            }
            steps {
                sh 'pip install --upgrade pip'
		sh 'pip install requests'
                sh 'python sources/baseami/upgrade/foundation_ami/upgrade_check.py u14'
                sh 'git config --global user.email "you@example.com"'
                sh 'git config --global user.name "Your Name"'
                sh 'git add sources/baseami/pure_base_ami_upgrade.js'
                sh 'git commit -m \'updated upgrade js file\''
            }
	    post {
		always {
			archiveArtifacts 'sources/baseami/pure_base_ami_upgrade.js'
		}
            }
        }
        stage('Upgrade if needed') {
            agent {
                docker {
                    image 'python:2-alpine'
                }
            }
            when {
              expression {
                 return fileExists('app3_u14_upgrade_trigger')
              }
            }
	    steps {
                sh 'python sources/baseami/upgrade/foundation_ami/upgrade.py u14'
	    }
	    post {
		always {
			archiveArtifacts 'sources/baseami/pure_base_ami_upgrade.js'
		}
            }
       }
    }
}
