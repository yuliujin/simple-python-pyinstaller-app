pipeline {
    agent none
    stages {
        stage('Check version') {
            agent {
                docker {
                    image 'python:2-alpine'
                }
            }
            steps {
                sh 'pip install --upgrade pip'
		sh 'pip install requests'
                sh 'python sources/baseami/upgrade/foundation_ami/upgrade_check.py u14'
            }
	    post {
		always {
			archiveArtifacts 'sources/baseami/pure_base_ami_upgrade.js'
		}
            }
        }
        stage('Upgrade if needed') {
		steps {
		script {
		if (fileExists('app3u14_upgrade_trigger')) {
                  echo 'Yes'
		} else {
    	          echo 'No'
		}
		}
		}
        }
    }
}
