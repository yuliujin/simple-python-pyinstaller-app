pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'
                }
            }
            steps {
                sh 'pip install --upgrade pip'
		sh 'pip install requests json subprocess sys'
                sh 'python sources/baseami/upgrade/foundation_ami/upgrade_check.py'
            }
        }
    }
}
